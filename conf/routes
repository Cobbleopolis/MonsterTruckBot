# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.index

GET         /login                         @securesocial.controllers.ProviderController.authenticate(provider: String = "discord", redirectTo: Option[String])
POST        /login                         @securesocial.controllers.ProviderController.authenticateByPost(provider: String = "discord", redirectTo: Option[String])

GET         /logout                        @securesocial.controllers.LoginPage.logout

GET         /authenticate/:provider        @securesocial.controllers.ProviderController.authenticate(provider, redirectTo: Option[String])
POST        /authenticate/:provider        @securesocial.controllers.ProviderController.authenticateByPost(provider, redirectTo: Option[String])

GET         /messages                      controllers.Application.jsMessages(page = "")
GET         /messages/:page                controllers.Application.jsMessages(page)

GET         /servers                       controllers.Application.servers()

GET         /bot/createBot                 controllers.Application.createBot()

GET         /dashboard/:id                 controllers.Dashboard.dashboard(id: String)
POST        /dashboard/:id/core             controllers.Dashboard.submitCoreSettings(id: String)

->          /discord                       discord.Routes



GET         /webjars/*file                 controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)

    